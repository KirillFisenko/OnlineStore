@model User
<form method="post">
    <h4>Смена роли доступа</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <label asp-for="Role.Name" class="col-sm-2 col-form-label">Новая роль:</label><br />
        <div class="col-sm-8">
            <input asp-for="Role.Name" type="string" class="form-control" />
            <span asp-validation-for="Role.Name" />
        </div>
    </div>     
    <br />    
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="ChangeAccess" asp-route-userId="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="User" asp-action="Index">Отмена</a>
</form>