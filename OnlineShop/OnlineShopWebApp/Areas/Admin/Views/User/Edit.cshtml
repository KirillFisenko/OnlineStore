@model EditUser
<form method="post">
    <h4>Редактирование пользователя</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Email:</label><br />
        <div class="col-sm-8">
            <input asp-for="UserName" type="email" class="form-control" value="@Model.UserName" />
            <span asp-validation-for="UserName" />
        </div>
    </div>    
    <br />

    <div class="row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Имя:</label><br />
        <div class="col-sm-8">
            <input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
    </div>    
    <br />

    <div class="row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Фамилия:</label><br />
        <div class="col-sm-8">
            <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName" />
            <span asp-validation-for="LastName" />
        </div>
    </div>   
    <br />

    <div class="row">
        <label asp-for="Phone" class="col-sm-2 col-form-label">Телефон:</label><br />
        <div class="col-sm-8">
            <input asp-for="Phone" type="text" class="form-control" value="@Model.Phone" />
            <span asp-validation-for="Phone" />
        </div>
    </div>
    <br />    
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-userId="@ViewData["userId"]">Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="User" asp-action="Index">Отмена</a>
</form>