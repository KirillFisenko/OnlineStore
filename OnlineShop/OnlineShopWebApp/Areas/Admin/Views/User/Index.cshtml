@{
    int i = 1;
}
@model List<User>;
<div class="row">
    @await Html.PartialAsync("MenuAdministrator")
    <div class="col-1"></div>
    <div class="col-9">
        <h3 class="text-center">Список пользователей</h3>
        <br />
        <a class="btn btn-outline-warning" asp-controller="User" asp-action="Add"><i class="bi bi-database-add">Добавить нового пользователя</i></a>
        <br />
        <br />
        @if (Model.Count() == 0)
        {
            <div class="text-center">
                <h3 class="bg-warning-subtle text-emphasis-warning">Список пользователей пуст</h3>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Email</th>
                                <th>Имя</th>
                                <th>Фамилия</th>
                                <th>Телефон</th>
                                <th>Роль</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td> @i </td>
                                    <td>@user.Name</td>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Role.Name</td>
                                    <td class="col-4 text-end">
                                        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-userId="@user.Id"><i class="bi bi-pencil">Подробнее</i></a>
                                    </td>
                                </tr>
                                i += 1;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>