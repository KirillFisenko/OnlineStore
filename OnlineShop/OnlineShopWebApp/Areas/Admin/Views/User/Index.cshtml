@{
    int i = 1;
}
@model List<UserViewModel>;

<div class="row">

    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("MenuAdministrator")
        </div>
    </div>

    <div class="col-lg-9 my-4">

        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="User" asp-action="Add"><i class="bi bi-database-add"> Добавить нового пользователя</i></a>

        @if (Model.Count() == 0)
        {
            <div class="text-center my-xl-5">
                <h3 class="bg-warning-subtle text-emphasis-warning ">Список пользователей пуст</h3>
            </div>
        }
        else
        {
            <div class="my-4">                
                <h4 class="bg-warning-subtle text-emphasis-warning">Список пользователей</h4>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Email</th>
                            <th>Телефон</th>
                            <th>Имя</th>
                            <th>Адресс</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td>@user.UserName</td>                                
                                <td>@user.PhoneNumber</td>
                                <td>@user.FirstName</td>
                                <td>@user.Address</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-name="@user.UserName"><i class="bi bi-pencil"> Подробнее</i></a>
                                </td>
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>