@model ProductViewModel

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("MenuAdministrator")
        </div>
    </div>

    <div class="col-lg-9 my-4">
        <form method="post">
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
            <div class="row g-3">
                <h4 class="bg-warning-subtle text-emphasis-warning">Редактирование товара</h4>
                
                <div class="col-12">
                    <label asp-for="Name">Название товара:</label>
                    <input asp-for="Name" type="text" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="Name" />
                </div>

                <div class="col-12">
                    <label asp-for="Cost">Цена товара, руб.:</label>
                    <input asp-for="Cost" type="text" class="form-control" value="@Model.Cost" />
                    <span asp-validation-for="Cost" />
                </div>

                <div class="col-12">
                    <label asp-for="ImagePath">Изорбражение товара:</label>
                    <input asp-for="ImagePath" type="text" class="form-control" value="@Model.ImagePath" />
                    <span asp-validation-for="ImagePath" />
                </div>

                <div class="col-12">
                    <label asp-for="Description">Описание:</label>
                    <input asp-for="Description" type="text" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" />
                </div>
            </div>          

            <button type="submit" class="w-100 btn btn-lg btn-warning my-4" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productid="@Model.Id">Сохранить</button>
            <a class="w-100 btn btn-lg btn-outline-warning" asp-area="Admin" asp-controller="Product" asp-action="Index">Отмена</a>

        </form>        
    </div>
</div>