@{
    int i = 1;
}
@model List<Product>;

<div class="row">

    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("MenuAdministrator")
        </div>
    </div>

    <div class="col-lg-9 my-4">

        <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Product" asp-action="Add"><i class="bi bi-database-add"> Добавить продукт</i></a>
        
        @if (Model.Count() == 0)
        {
            <div class="text-center my-xl-5">
                <h3 class="bg-warning-subtle text-emphasis-warning ">Список продуктов пуст</h3>
            </div>
        }
        else
        {
            <div class="my-4">
                <h4 class="bg-warning-subtle text-emphasis-warning">Список продуктов</h4>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="">№</th>
                            <th class="col-4">Название</th>
                            <th class="col-2"></th>
                            <th class="col-2">Цена</th>
                            <th class="col-4"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td><a asp-area="" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">@product.Name</a></td>
                                <td><img width="60" height="54" src="@product.ImagePath"></td>
                                <td>@product.Cost &#8381;</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id"><i class="bi bi-pencil"> Редактировать</i></a>
                                    <a class="btn btn-warning" asp-area="Admin" asp-controller="Product" asp-action="Del" asp-route-productId="@product.Id"> <i class="bi bi-trash-fill"> Удалить</i></a>
                                </td>
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>