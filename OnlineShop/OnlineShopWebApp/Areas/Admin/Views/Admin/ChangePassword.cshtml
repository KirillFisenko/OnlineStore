@model User
<form method="post">
    <h4>Смена пароля</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <label asp-for="Password" class="col-sm-2 col-form-label">Новый пароль:</label><br />
        <div class="col-sm-8">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
    </div>     
    <br />    
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="ChangePassword" asp-route-userid="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Users">Отмена</a>
</form>