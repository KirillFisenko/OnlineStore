@model User
<form method="post">
    <h4>Редактирование пользователя</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label><br />
        <div class="col-sm-8">
            <input asp-for="Email" type="email" class="form-control" value="@Model.Email" />
            <span asp-validation-for="Email" />
        </div>
    </div>    
    <br />

    <div class="row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Имя:</label><br />
        <div class="col-sm-8">
            <input asp-for="FirstName" type="text" class="form-control" value="@Model.FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
    </div>    
    <br />

    <div class="row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Фамилия:</label><br />
        <div class="col-sm-8">
            <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName" />
            <span asp-validation-for="LastName" />
        </div>
    </div>   
    <br />

    <div class="row">
        <label asp-for="Phone" class="col-sm-2 col-form-label">Телефон:</label><br />
        <div class="col-sm-8">
            <input asp-for="Phone" type="text" class="form-control" value="@Model.Phone" />
            <span asp-validation-for="Phone" />
        </div>
    </div>
    <br />

    <div class="row">
        <label asp-for="Password" class="col-sm-2 col-form-label">Пароль:</label><br />
        <div class="col-sm-8">
            <input asp-for="Password" type="password" class="form-control" value="@Model.Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="EditUser" asp-route-userId="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Users">Отмена</a>
</form>