@model Cart;

<div class="row">

	@*форма заказа*@
	<div class="col-5 card shadow-lg">
		<h4>Ваш заказ</h4>
		<table class="table" style="font-size:12px">
			<thead>
				<tr>
					<th class="col-5">Название</th>
					<th class="col-2">Цена</th>
					<th class="col-2">Количество</th>
					<th class="col-3">Стоимость</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Items)
				{
					<tr>
						<td>@item.Product.Name</td>
						<td>@string.Format("{0:### ### ###}", item.Product.Cost) р</td>
						<td>
							@item.Amount
						</td>
						<td>@string.Format("{0:### ### ###}", item.Cost) р</td>
					</tr>
				}
			</tbody>
		</table>
		<div class="text-end">
			<h6>Итого: @string.Format("{0:### ### ###}", Model.Cost) р</h6>
		</div>
	</div>
	<div class="col-1"></div>

	@*форма данных покупателя*@
	<div class="col-6 card shadow-lg">
		<form>
			<div class="form-group" style="margin:10px">
				<label for="exampleFormControlInput1">ФИО*</label>
				<input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Фисенко Кирилл Андреевич">
			</div>
			<div class="form-group" style="margin:10px">
				<label for="exampleFormControlInput2">Email*</label>
				<input type="email" class="form-control" id="exampleFormControlInput2" placeholder="name@example.com">
			</div>
			<div class="form-group" style="margin:10px">
				<label for="exampleFormControlInput3">Телефон*</label>
				<input type="email" class="form-control" id="exampleFormControlInput3" placeholder="+7 (926) 546-3469">
			</div>
			<div class="form-group" style="margin:10px">
				<label for="exampleFormControlInput4">Адрес*</label>
				<input type="email" class="form-control" id="exampleFormControlInput4" placeholder="г. Москва, ул. Тверская, д. 1">
			</div>
			<div class="form-group" style="margin:10px">
				<label for="exampleFormControlTextarea1">Комментарии к заказу</label>
				<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
			</div>
		</form>
	</div>
	<div class="text-center" style="margin:30px">
		<a class="btn btn-outline-secondary btn-lg" href="/home/index" role="button">Продолжить покупки</a>
		<a class="btn btn-outline-success btn-lg" href="/order/buy" role="button">Оформить заказ</a>
	</div>
</div>