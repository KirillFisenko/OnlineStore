@model Order;
<form method="post">
    <div class="row">
        @await Html.PartialAsync("MenuAdministrator")
        <div class="col-1"></div>
        <div class="col-9">
            <h4>Заказ № @Model.Id</h4>
            <br />
            <table class="table">
                <tr>
                    <th>Дата заказа:</th>
                    <td>@Model.Date</td>
                </tr>
                <tr>
                    <th>Время заказа:</th>
                    <td>@Model.Time</td>
                </tr>
                <tr>
                    <th>Адрес:</th>
                    <td>@Model.User.Address</td>
                </tr>
                <tr>
                    <th>Получатель:</th>
                    <td>@Model.User.Name</td>
                </tr>
                <tr>
                    <th>Телефон:</th>
                    <td>@Model.User.Phone</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Model.User.Email</td>
                </tr>
                <tr>
                    <th>Сумма заказа:</th>
                    <td>@string.Format("{0:### ### ###}", Model.Amount) р</td>
                </tr>
                <tr>
                    <th>Статус заказа:</th>
                    <td>
                        <select asp-for="@Model.Status"
                                asp-items="@Html.GetEnumSelectList<OrderStatuses>()"
                                class="form-control-sm">
                        </select>
                    </td>
                </tr>
            </table>
            <br />
            <button type="submit" class="btn btn-primary" asp-controller="Admin" asp-action="UpdateOrderStatus" asp-route-orderid="@Model.Id">Сохранить</button>
            <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Orders">Отмена</a>
        </div>
    </div>
</form>