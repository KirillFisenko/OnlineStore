@model List<Roles>;
<form method="post">
    <div class="row">
        @await Html.PartialAsync("MenuAdministrator")
        <div class="col-1"></div>
        <div class="col-9">
            <h3 class="text-center">Список ролей</h3>
            <br />
            @if (Model.Count() == 0)
            {
                <div class="text-center">
                    <h3 class="bg-warning-subtle text-emphasis-warning">Список ролей пуст</h3>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Имя роли</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td class="col-4 text-end">
                                            <button class="btn btn-outline-warning" asp-controller="admin" asp-action="DelRoles" name="Name" value="@role.Name"><i class="bi bi-trash-fill"> Удалить роль </i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>                
            }
            <a class="btn btn-outline-warning" asp-controller="admin" asp-action="AddRoles"><i class="bi bi-database-add"> Добавить роль </i></a>
        </div>
    </div>
</form>