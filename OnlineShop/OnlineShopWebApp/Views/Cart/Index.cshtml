@model Cart;

@if (Model == null)
{
	<h3>Корзина пустая</h3>
}
else
{
	<div class="row">
		<div class="col">
			<table class="table">
				<thead>
					<tr>
						<th>Название</th>
						<th>Цена</th>
						<th>Количество</th>
						<th>Стоимость</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model.Items)
					{
						<tr>
							<td>@item.Product.Name</td>
							<td>@item.Product.Cost руб.</td>
							<td>@item.Amount</td>
							<td>@item.Cost руб.</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="text-end">
				<h3>Итого:</h3>
				<h3>@Model.Cost руб.</h3>
			</div>
			<div class="text-center">
				<a class="btn btn-outline-info" href="/home/index" role="button">Продолжить покупки</a>
				<a class="btn btn-success" href="#" role="button">Сделать заказ</a>
			</div>
		</div>
	</div>
}