@model Register

<form method="post">    
    <h4>Регистрация</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-1 col-form-label">Логин</label><br />
        <div class="col-sm-3">
            <input asp-for="UserName" type="email" class="form-control" />
            <span asp-validation-for="UserName" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label><br />
        <div class="col-sm-3">
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ConfirmPassword" class="col-sm-1 col-form-label">Пароль</label><br />
        <div class="col-sm-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
</form>