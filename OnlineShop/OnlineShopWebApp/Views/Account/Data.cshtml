@model EditUserByUserViewModel

<div class="row">
    <div class="col-lg-3">
        <div class="my-4">
            @await Html.PartialAsync("LeftMenu")
        </div>
    </div>

    <div class="col-lg-9 my-4">
        <form method="post">
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
            <div class="row g-3">
                <h4 class="bg-warning-subtle text-emphasis-warning">Редактирование пользователя</h4>                

                <div class="col-12">
                    <label asp-for="Phone">Телефон:</label>
                    <input asp-for="Phone" type="text" class="form-control" value="@Model.Phone" />
                    <span asp-validation-for="Phone" />
                </div>
            </div>

            <button type="submit" class="btn btn-warning my-4" asp-area="" asp-controller="Account" asp-action="Edit">Сохранить</button>
            <a class="btn btn-outline-warning" asp-area="" asp-controller="Home" asp-action="Index">Отмена</a>

        </form>
    </div>
</div>