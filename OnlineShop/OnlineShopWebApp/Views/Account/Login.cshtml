@model LoginViewModel

<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Вход</h1>
                <a type="button" class="btn-close" asp-controller="Home" asp-action="Index"></a>
            </div>

            <div class="modal-body p-5 pt-0">
                <form method="post">
                    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                    
                    @* на какую страницу перейти после авторизации *@
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="UserName">Email</label>
                        <span asp-validation-for="UserName" />
                    </div>

                    <div class="form-floating mb-1">
                        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                        <label asp-for="Password">Пароль</label>
                        <span asp-validation-for="Password" />
                    </div>
                        
                    <div class="mb-3">
                        <a asp-controller="Account" asp-action="ForgotPassword">Забыли пароль?</a>
                    </div>                    

                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-warning" type="submit" asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl">Войти</button>

                    <div class="form-check mb-2">
                        <input name="rememberme" class="form-check-input" type="checkbox" id="rememberMe" value="true">
                        <label class="form-check-label" for="rememberMe">
                            Запомнить меня?
                        </label>
                    </div>                    

                    <h2 class="fs-5 mb-3 text-center">ИЛИ</h2>
                    <a class="w-100 mb-2 btn btn-lg rounded-3 btn-outline-warning" type="submit" asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                   
                </form>
            </div>
        </div>
    </div>
</div>