@model Product;

<div class="row">
    <div class="col-6">
        <img class="card-img-top" src="@Model.ImagePath">
    </div>
    <div class="col-6">
        <h3>@Model.Name</h3>
        <h5>@string.Format("{0:### ### ###}", Model.Cost) р</h5>
        <p>@Model.Description</p>        
        <div class="text-center" style="margin:10px">
            <a class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-cart">В корзину</i></a>
            <a class="btn btn-outline-warning" asp-controller="Favourites" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-heart">В избранное</i></a>
            <a class="btn btn-outline-warning" asp-controller="Compare" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-clipboard2-plus">Сравнить</i></a>
        </div>        
        <div class="text-center" style="margin:20px">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-90deg-left">Продолжить покупки</i></a>
        </div>
    </div>
</div>