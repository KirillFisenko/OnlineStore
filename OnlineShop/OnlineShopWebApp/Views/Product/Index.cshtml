@model Product;

<div class="row">
	<div class="col-6">
		<img class="card-img-top" src="@Model.ImagePath">
	</div>
	<div class="col-6">
		<h6>@Model.Name</h6>
		<h5>@string.Format("{0:### ### ###}", Model.Cost) р</h5>
		<p style="font-size: 12px">@Model.Description</p>
		<div class="text-center">
			<a class="btn btn-outline-warning btn-lg" style="margin: 5px" asp-controller="cart" asp-action="add" asp-route-productid="@Model.Id">Добавить в корзину</a>
			<a class="btn btn-outline-secondary" style="margin: 5px" asp-controller="home" asp-action="index">Продолжить покупки</a>
		</div>
	</div>
</div>