@model List<Product>;

@if (Model.Count() == 0)
{
    <div class="text-center">
        <h3 class="bg-warning-subtle text-emphasis-warning">В избранном еще нет товаров</h3>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Перейти к покупкам</a>
    </div>
}
else
{
    <h4>Избранное</h4>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th></th>
                        <th>Цена</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="col-4"><a style="color:navy" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id"><p>@product.Name</p></a></td>
                            <td><div class="col-2 text-start"><img class="img-fluid" src="@product.ImagePath"></div></td>
                            <td class="col-3">@string.Format("{0:### ### ###}", product.Cost) р</td>
                            <td class="col-3 text-end">
                                <a class="btn btn-outline-warning" asp-controller="Favourites" asp-action="Del" asp-route-productId="@product.Id"><i class="bi bi-trash-fill">Удалить</i></a>
                                <a class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id"><i class="bi bi-cart">В корзину</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-90deg-left">Продолжить покупки</i></a>
                <!-- Кнопка-триггер модального окна -->
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="bi bi-x-circle">Очистить избранное</i>
                </button>                
            </div>
        </div>
    </div>    
}

<!-- Модальное окно -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Очистка избранного</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                Вы уверены, что хотите очистить список?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <a type="button" class="btn btn-primary" asp-controller="Favourites" asp-action="Clear">Очистить</a>
            </div>
        </div>
    </div>
</div>