@model List<Product>;

@if (Model.Count() == 0)
{
    <div class="text-center">
        <h3 class="bg-warning-subtle text-emphasis-warning">В избранном еще нет товаров</h3>
        <a class="btn btn-primary" asp-controller="home" asp-action="index">Перейти к покупкам</a>
    </div>
}
else
{
    <h4>Избранное</h4>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th></th>
                        <th>Цена</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="col-4"><a style="color:navy" asp-controller="product" asp-action="index" asp-route-productid="@product.Id"><p>@product.Name</p></a></td>
                            <td><div class="col-2 text-start"><img class="img-fluid" src="@product.ImagePath"></div></td>
                            <td class="col-3">@string.Format("{0:### ### ###}", product.Cost) р</td>
                            <td class="col-3 text-end">
                                <a class="btn btn-outline-warning" asp-controller="favourites" asp-action="del" asp-route-productid="@product.Id"><i class="bi bi-trash-fill"> Удалить</i></a>
                                <a class="btn btn-warning" asp-controller="cart" asp-action="add" asp-route-productid="@product.Id"> <i class="bi bi-cart"> В корзину </i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center">
                <a class="btn btn-primary" asp-controller="home" asp-action="index"><i class="bi bi-arrow-90deg-left"> Продолжить покупки</i></a>
                <a class="btn btn-outline-primary" asp-controller="favourites" asp-action="clear"><i class="bi bi-x-circle"> Очистить избранное</i></a>
            </div>
        </div>
    </div>
}