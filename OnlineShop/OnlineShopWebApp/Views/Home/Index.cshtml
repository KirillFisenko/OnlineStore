@model List<Product>;

<div class="row">

	<div class="col-lg-3">
		<div class="my-4">
			<a class="titleName" asp-controller="Home" asp-action="Index">				
				<img src="images/mainIcon.png" alt="иконка" width="40" height="34" class="d-inline-block align-text-top"> ProPC
			</a>
			<div class="list-group list-group-flush">
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Все категории</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Процессоры</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Материнские платы</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Видеокарты</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">HDD</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">SSD</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Оперативная память</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Корпуса</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Блоки питания</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Системы охлаждения</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Оптические приводы</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Звуковые карты</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Аксессуары и моддинг</a>
				<a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">Программное обеспечение</a>
			</div>
		</div>
	</div>

	<div class="col-lg-9">
		<div id="carouselExampleAutoplaying" class="carousel slide my-4" data-bs-ride="carousel">
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="/images/image.png" class="d-block img-fluid" alt="Изображение товара">
					<div class="carousel-caption d-none d-md-block">
						<h5>Сражайся за свободу</h5>
						<p>Получите комплект GeForce Overwatch 2 Unvasion Ultimate в подарок при покупке некоторых видеокарт GeForce RTX 40.</p>
					</div>
				</div>
				<div class="carousel-item">
					<img src="/images/image.png" class="d-block img-fluid" alt="Изображение товара">
					<div class="carousel-caption d-none d-md-block">
						<h5>Стремитесь к преодолению предстоящих испытаний</h5>
						<p>Вместе с новым поколением видеокарт GeForce RTX 40.</p>
					</div>
				</div>
				<div class="carousel-item">
					<img src="/images/image.png" class="d-block img-fluid" alt="Изображение товара">
					<div class="carousel-caption d-none d-md-block">
						<h5>GeForce RTX 4070</h5>
						<p>Зажгите игру. Стремись к победе.</p>
					</div>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Предыдущий</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Следующий</span>
			</button>
		</div>

		<div class="row">
			@foreach (var product in Model)
			{
				<div class="col-lg-4 mb-4">
					<div class="card h-80 box-shadow">
						<a asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id"><img class="card-img-top" src="/images/image.png" alt="Изображение товара"></a>
						<div class="card-body">
							<h5 class="price">@product.Cost &#8381;</h5>
							<p class="textId">ID: @product.Id</p>
							<p class="card-title">
								<a class="titleName" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">@product.Name</a>
							</p>
							<p class="textDescription">@product.Description</p>
						</div>
						<div class="card-body d-flex align-items-end justify-content-around">
							<a class="btn btn-outline-warning" title="Подробнее о товаре" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id"><i class="bi bi-info-square"></i></a>
							<a class="btn btn-outline-warning" title="Добавить в избранное" asp-controller="Favourites" asp-action="Add" asp-route-productId="@product.Id"><i class="bi bi-heart"></i></a>
							<a class="btn btn-outline-warning" title="Сравнить" asp-controller="Compare" asp-action="Add" asp-route-productId="@product.Id"><i class="bi bi-clipboard2-plus"></i></a>
							<a class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id"><i class="bi bi-cart"></i> В корзину</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>