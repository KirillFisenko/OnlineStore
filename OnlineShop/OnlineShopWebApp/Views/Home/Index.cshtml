@model AllListsProductViewModel;

<div class="row">

    <div class="col-lg-3">
        <div class="my-4">
            <a class="titleName" asp-controller="Home" asp-action="Index">
                <img src="/images/Index/mainIcon.png" alt="иконка" width="40" height="34" class="d-inline-block align-text-top"> ProPC
            </a>
            @await Html.PartialAsync("LeftMenu")
        </div>
    </div>

    <div class="col-lg-9">
        <div id="carouselExampleAutoplaying" class="carousel slide my-4" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="4" aria-label="Slide 5"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/Carousel/pa_rtx4080_GP_1920_680_183.jpg" class="d-block img-fluid rounded" alt="Изображение карусели">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/pa_ow2s6_1920_680_01_ru_412.jpg" class="d-block img-fluid rounded" alt="Изображение карусели">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/pa_rtx4060Ti_js_1920_680_01_en_717.jpg" class="d-block img-fluid rounded" alt="Изображение карусели">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/pa_rtx4070_1920_680_01_en_302.jpg" class="d-block img-fluid rounded" alt="Изображение карусели">
                </div>
                <div class="carousel-item">
                    <img src="/images/Carousel/pa_rtx4080_70Ti_js_1920_680_02_ru_162.jpg" class="d-block img-fluid rounded" alt="Изображение карусели">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Предыдущий</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Следующий</span>
            </button>
        </div>

        <div class="row">
            @foreach (var product in Model.productsViewModel)
            {
                <div class="col-lg-4 mb-3">
                    <div class="card box-shadow h-100 w-100">
                        <a asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">
                            <div class="scale p-2">
                                <img class="card-img-top rounded mx-auto d-block w-50 h-50 scale" src="@product.Images.FirstOrDefault(image => image.Url.Contains("_") == false).Url" alt="Изображение товара">
                            </div>
                        </a>
                        <div class="card-body">
                            <h5 class="price">@product.Cost &#8381;</h5>
                            <p class="textId">ID: @product.Id.ToString().Split('-').Last()</p>
                            <p class="card-title">
                                <a class="titleName" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id"><p class="gain-left">@product.Name</p></a>
                            </p>
                            <p class="textDescription">@product.Description</p>
                        </div>
                        <div class="d-flex flex-wrap align-items-end justify-content-around p-2">
                            <a class="btn btn-outline-warning flex-fill m-1" title="Подробнее о товаре" asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id">
                                <i class="bi bi-info"></i>
                            </a>
                            @if (Model.favoriteProductsViewModel.FirstOrDefault(p => p.Name == product.Name) != null)
                            {
                                <a class="btn btn-outline-warning flex-fill m-1" title="Удалить из избранного" asp-controller="Favorite" asp-action="AddOrRemove" asp-route-productId="@product.Id">
                                    <i class="bi bi-heart-fill link-danger"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-warning flex-fill m-1" title="Добавить в избранное" asp-controller="Favorite" asp-action="AddOrRemove" asp-route-productId="@product.Id">
                                    <i class="bi bi-heart"></i>
                                </a>
                            }
                            @if (Model.compareProductsViewModel.FirstOrDefault(p => p.Name == product.Name) != null)
                            {
                                <a class="btn btn-outline-warning  flex-fill m-1" title="Удалить из сравнения" asp-controller="Compare" asp-action="AddOrRemove" asp-route-productId="@product.Id">
                                    <i class="bi bi-clipboard2-plus-fill link-danger"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-warning flex-fill m-1" title="Сравнить" asp-controller="Compare" asp-action="AddOrRemove" asp-route-productId="@product.Id">
                                    <i class="bi bi-clipboard2-plus"></i>
                                </a>
                            }
                            @if (Model.cartViewModel != null)
                            {
                                var cartProduct = Model.cartViewModel.Items.FirstOrDefault(item => item.Product.Name == product.Name);
                                if (cartProduct != null)
                                {
                                    <div class="btn-group m-1" role="group">
                                        <a type="button" class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" asp-route-url="Home">
                                            +
                                        </a>
                                        <a class="btn btn-warning">@cartProduct.Quantity</a>
                                        <a type="button" class="btn btn-warning" asp-controller="Cart" asp-action="DecreaseAmount" asp-route-productId="@product.Id" asp-route-url="Home">
                                            -
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <a class="btn btn-warning flex-fill m-1" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" asp-route-url="Home">
                                        <i class="bi bi-cart"></i> В корзину
                                    </a>
                                }
                            }
                            else
                            {
                                <a class="btn btn-warning flex-fill m-1" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" asp-route-url="Home">
                                    <i class="bi bi-cart"></i> В корзину
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>