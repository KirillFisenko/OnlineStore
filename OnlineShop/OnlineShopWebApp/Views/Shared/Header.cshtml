				<div class="text-end">
					<a type="button" class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
					<a type="button" class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
				</div>
			</div>

			<div class="d-flex flex-wrap justify-content-center">
				<ul class="nav col-12 col-lg-auto my-2 my-md-0 text-small text-center">
					<li>
						<a asp-area="" asp-controller="Favourites" asp-action="Index" class="nav-link text-white">
							<i class="bi d-block mx-auto mb-1 bi-heart"></i>
							Избранное
						</a>						
					</li>
					<li>
						<a asp-area="" asp-controller="Compare" asp-action="Index" class="nav-link text-white">
							<i class="bi d-block mx-auto mb-1 bi-clipboard2-plus"></i>
							Сравнение
						</a>
					</li>
					<li>
						<a asp-area="" asp-controller="Cart" asp-action="Index" class="nav-link text-white">
