<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShopWebApp</title>
    @* подключаем стили, в т.ч. bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShopWebApp.styles.css" asp-append-version="true" />
    @* подключаем иконки *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    @* API Яндекс карт *@
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&apikey=69200778-0a6e-44a8-91b3-1e0b0b2c6aed&suggest_apikey=0c2be3e8-019d-48ac-aaa1-f2244e90eec2" type="text/javascript"></script>    
</head>

<body>

    @await Html.PartialAsync("Header")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            © 2023 ПАО ProPC, г. Москва, Проектируемый пр., д. 124 +7 (495) 548-85-54
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>