<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShopWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShopWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>

<body>
    <header>        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 nav">
            <div class="container-fluid">
                <h4 class="font-monospace">Интернет-магазин комплектующих ProPC</h4>
                <a class="nav-link btn-lg" asp-area="" asp-controller="home" asp-action="index">Главная</a>
                <nav class="nav justify-content-center">                    
                    <a class="nav-link" asp-area="" asp-controller="favourites" asp-action="index"> <i class="bi bi-heart"></i> Избранное</a>
                    <a class="nav-link" asp-area="" asp-controller="compare" asp-action="index"> <i class="bi bi-clipboard2-plus"></i> Список сравнения</a>
                    <a class="nav-link" asp-area="" asp-controller="cart" asp-action="index"> <i class="bi bi-cart4"></i> Корзина</a>
               </nav>
           </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p> ПАО "ProPC" г. Москва, Проектируемый пр. №134, д. 157, к. 5 +7 (495) 475-5694</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>